<%= form_for @response, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.radio_button :attending, "1", :class => "btn" %><label for="attending_true">Count me in!</label>
      <%= f.radio_button :attending, "0", :class => "btn" %><label for="attending_false">Regrets, celebrating from afar.</label>
    </div>
  </div>
  <div class="control-group is_attending" style="display: none;">
    <label for="guests" class="control-label"># of guests in your party?</label>
    <div class="controls">
      <%= f.number_field :guests, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group is_attending" style="display: none;">
    <label for="suggested_song" class="control-label">Would you please suggest your favorite love or dance song for us?</label>
    <div class="controls">
      <%= f.text_field :suggested_song, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                responses_path, :class => 'btn' %>
  </div>
<% end %>
