<%= form_tag(respond_path, method: :put) do %>
  <p><%= label_tag :passphrase, 'Pass phrase' %></p>
  <p><%= text_field_tag :passphrase, nil, placeholder: 'Enter pass phrase from invite...' %></p>
  <p><%= label_tag :name, 'Name' %></p>
  <p><%= text_field_tag :name %></p>
  <p><%= label_tag :address, 'Address' %></p>
  <p><%= text_area_tag :address %></p>
  <p><%= label_tag :guests, 'Number of guests (including yourself)' %></p>
  <p><%= number_field_tag :guests, nil %></p>
  <p><%= submit_tag 'Respond' %></p>
<% end %>
