<%- model_class = Invite -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:passphrase) %></th>
      <th><%= model_class.human_attribute_name(:sent) %></th>
      <th><%= model_class.human_attribute_name(:responded) %></th>
      <th><%= model_class.human_attribute_name(:guests) %></th>
      <th><%= model_class.human_attribute_name(:tier) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= link_to invite.id, invite_path(invite) %></td>
        <td><%= invite.name %></td>
        <td><%= invite.address %></td>
        <td><%= invite.passphrase %></td>
        <td><%= invite.sent %></td>
        <td><%= invite.responded %></td>
        <td><%= invite.guests %></td>
        <td><%= invite.tier %></td>
        <td><%=l invite.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_invite_path(invite), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      invite_path(invite),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_invite_path,
            :class => 'btn btn-primary' %>
