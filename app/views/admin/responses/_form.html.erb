<%= form_for @response, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :guests, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :guests, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :suggested_song, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :suggested_song, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :attending, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :attending, :class => 'check_box' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                admin_responses_path, :class => 'btn' %>
  </div>
<% end %>
